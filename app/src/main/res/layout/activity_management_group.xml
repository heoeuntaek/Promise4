<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Management_Group">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">
        </LinearLayout>
    </LinearLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2E8CFF"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="#8B0000"></androidx.appcompat.widget.Toolbar>

    <Button
        android:id="@+id/btn_match_schedule"
        android:layout_width="206dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/roundbutton"
        android:backgroundTint="#4F2196F3"
        android:elevation="10dp"
        android:text="스케줄 매칭"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_check_schedule" />

    <Button
        android:id="@+id/btn_share_schedule"
        android:layout_width="206dp"
        android:layout_height="50dp"
        android:layout_marginTop="250dp"
        android:background="@drawable/roundbutton"
        android:backgroundTint="#4F2196F3"
        android:elevation="10dp"
        android:text="스케줄 공유"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_list_user"
        android:layout_width="206dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/roundbutton"
        android:backgroundTint="#4F2196F3"
        android:elevation="10dp"
        android:text="그룹원 조회"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_group_out" />

    <Button
        android:id="@+id/btn_group_out"
        android:layout_width="206dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/roundbutton"
        android:backgroundTint="#4F2196F3"
        android:elevation="10dp"
        android:text="그룹 나가기"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_match_schedule" />

    <Button
        android:id="@+id/btn_check_schedule"
        android:layout_width="206dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/roundbutton"
        android:backgroundTint="#4F2196F3"
        android:elevation="10dp"
        android:text="공유 스케줄 조회"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_share_schedule" />

    <TextView
        android:id="@+id/group_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:hint="그룹 아이디"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_group_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:hint="그룹 코드"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/group_id" />


</androidx.constraintlayout.widget.ConstraintLayout>
